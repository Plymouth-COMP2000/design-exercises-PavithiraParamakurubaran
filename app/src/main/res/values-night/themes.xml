<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Dark Theme -->
    <style name="Base.Theme.DineVista" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Global font (Poppins) -->
        <item name="fontFamily">@font/poppins</item>
        <item name="android:fontFamily">@font/poppins</item>

        <!-- Text Appearances -->
        <item name="textAppearanceHeadlineLarge">@style/PoppinsText</item>
        <item name="textAppearanceHeadlineMedium">@style/PoppinsText</item>
        <item name="textAppearanceHeadlineSmall">@style/PoppinsText</item>

        <item name="textAppearanceBodyLarge">@style/PoppinsText</item>
        <item name="textAppearanceBodyMedium">@style/PoppinsText</item>
        <item name="textAppearanceBodySmall">@style/PoppinsText</item>

        <!-- Dark mode background -->
        <item name="android:colorBackground">#000000</item>
    </style>

    <!-- App theme -->
    <style name="Theme.DineVista" parent="Base.Theme.DineVista" />

    <!-- Apply Poppins to all text -->
    <style name="PoppinsText" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">#FFFFFF</item> <!-- White text in dark mode -->
    </style>

    <!-- Bottom Navigation without active indicator -->
    <style name="BottomNav.NoIndicator" parent="Widget.Material3.BottomNavigationView">
        <item name="itemBackground">@android:color/transparent</item>
        <item name="itemIconTint">@color/text_primary</item>
        <item name="itemTextColor">@color/text_primary</item>
    </style>


</resources>
