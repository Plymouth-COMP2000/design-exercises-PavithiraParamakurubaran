<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- MAIN CONTENT -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- TOP BAR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- ICON ROW -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <ImageButton
                    android:id="@+id/btnMenu"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_hamburgermenu" />

                <!-- Spacer pushes the next button to the right -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/btnNotification"
                    android:layout_width="30dp"
                    android:layout_height="36dp"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_notifications" />
            </LinearLayout>


            <!-- WELCOME ROW -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp">

                <!-- Welcome Text -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvWelcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome Back"
                        android:textColor="#444"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular" />

                    <TextView
                        android:id="@+id/tvUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:fontFamily="@font/poppins_semibold" />
                </LinearLayout>

                <!-- Profile Icon -->
                <ImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_profile" />
            </LinearLayout>
        </LinearLayout>



        <!-- SCROLLABLE CONTENT -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <!-- SEARCH BAR -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_search_bg"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginTop="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_search"/>

                    <AutoCompleteTextView
                        android:id="@+id/etSearch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="Search Cuisines or Items"
                        android:layout_weight="1"
                        android:paddingStart="8dp"
                        android:background="@android:color/transparent"
                        android:textColor="@color/text_primary"
                        android:textColorHint="#888"
                        android:imeOptions="actionSearch"
                        android:inputType="text" />



                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_mic" />
                </LinearLayout>

                <!-- POPULAR MENUS -->
                <TextView
                    android:id="@+id/tvPopularMenus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Popular Menus"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="16dp" />

                <ImageView
                    android:id="@+id/ivPopularBanner"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:src="@drawable/popularbanner1"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="8dp" />

                <ImageView
                    android:id="@+id/ivDots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dots_indicator"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp" />

                <!-- FOOD CATEGORIES -->
                <TextView
                    android:id="@+id/tvFoodCategories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food Categories"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="16dp" />

                <GridLayout
                    android:id="@+id/gridCategories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:rowCount="2"
                    android:alignmentMode="alignMargins"
                    android:paddingTop="8dp"
                    android:paddingBottom="16dp">

                    <!-- Snacks & Appetizers -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:gravity="center_horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/imgSnacks"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/cat_snacks"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Snacks"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                    <!-- Soups -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:gravity="center_horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/imgSoups"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/cat_soups"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Soups"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                    <!-- Main Courses -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:gravity="center_horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/imgMainCourse"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/cat_main_course"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Main Course"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                    <!-- Rice & Noodles -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:gravity="center_horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/imgRiceNoodles"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/cat_rice_noodles"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rice &amp; Noodles"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                    <!-- Salads -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:gravity="center_horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/imgSalads"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/cat_salads"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Salads"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                    <!-- Desserts -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:gravity="center_horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/imgDesserts"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/cat_desserts"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Desserts"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                </GridLayout>


            </LinearLayout>
        </ScrollView>

        <!-- BOTTOM NAVIGATION -->
        <include layout="@layout/bottom_navbar" />

    </LinearLayout>

    <!-- DRAWER -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_layout"
        app:menu="@menu/bottom_nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
