<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- MAIN CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <!-- TOP BAR -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <ImageButton
                    android:id="@+id/btnMenu"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_hamburgermenu" />

                <!-- Spacer pushes the next button to the right -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/btnNotification"
                    android:layout_width="30dp"
                    android:layout_height="36dp"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_notifications" />
            </LinearLayout>

            <!-- Banner -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/popularbanner1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="20dp" />

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Popular Categories"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/text_primary"
                android:layout_marginTop="18dp"
                android:paddingStart="4dp" />


                <GridLayout
                    android:id="@+id/gridCategories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:rowCount="3"
                    android:alignmentMode="alignMargins"
                    android:paddingTop="8dp"
                    android:paddingBottom="16dp">

                    <!-- Snacks & Appetizers -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:gravity="center_horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/imgSnacks"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/cat_snacks"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Snacks"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                    <!-- Soups -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:gravity="center_horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/imgSoups"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/cat_soups"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Soups"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                    <!-- Main Courses -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:gravity="center_horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/imgMainCourse"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/cat_main_course"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Main Course"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                    <!-- Rice & Noodles -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:gravity="center_horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/imgRiceNoodles"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/cat_rice_noodles"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rice & Noodles"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                    <!-- Salads -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:gravity="center_horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/imgSalads"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/cat_salads"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Salads"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                    <!-- Desserts -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:gravity="center_horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/imgDesserts"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/cat_desserts"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Desserts"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                    <!-- Seafood -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:gravity="center_horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/imgSeafood"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/cat_seafood"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Seafoods"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                    <!-- Beverages -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:gravity="center_horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/imgBeverages"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/cat_beverages"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Beverages"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                    <!-- Vegan -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:gravity="center_horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/imgVegan"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/cat_vegan"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vegan"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>
                </GridLayout>

            <!-- BOTTOM NAVIGATION ADDED HERE -->
            <include layout="@layout/bottom_navbar" />

        </LinearLayout>
    </ScrollView>

    <!-- NAVIGATION DRAWER -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_layout"
        app:menu="@menu/bottom_nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
