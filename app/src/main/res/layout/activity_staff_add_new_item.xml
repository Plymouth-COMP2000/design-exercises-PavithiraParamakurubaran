<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- MAIN CONTENT -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <!-- TOP BAR -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">

                    <ImageButton
                        android:id="@+id/btnMenu"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@android:color/transparent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_hamburgermenu" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/btnNotification"
                        android:layout_width="30dp"
                        android:layout_height="36dp"
                        android:background="@android:color/transparent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_notifications" />
                </LinearLayout>

                <!-- Page Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add New Item"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="12dp"/>

                <!-- Upload Image -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp">

                    <!-- Image Preview -->
                    <ImageView
                        android:id="@+id/imgUploadPreview"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/imgplaceholder"
                        android:background="@drawable/rounded_gray"
                        android:scaleType="centerCrop"/>

                    <!-- Right Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp"
                        android:gravity="center_vertical">


                        <!-- Remove Button -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:background="@drawable/btn_outline"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:layout_marginTop="8dp">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_upload"
                                android:tint="@android:color/black"
                                android:scaleType="fitCenter"
                                android:layout_marginEnd="6dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Upload Image"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>


                <!-- Item Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Name"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"/>
                <EditText
                    android:id="@+id/etItemName"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Enter Item Name"
                    android:background="@drawable/bg_input"
                    android:padding="12dp"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>

                <!-- Food Description -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food Description"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"/>
                <EditText
                    android:id="@+id/etFoodDescription"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:hint="Enter Food Description"
                    android:background="@drawable/bg_input"
                    android:padding="12dp"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:inputType="textMultiLine"
                    android:gravity="top"/>

                <!-- Food Category -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food Category"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"/>
                <Spinner
                    android:id="@+id/spinnerFoodCategory"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_input"
                    android:layout_marginTop="4dp"
                    android:padding="12dp"/>

                <!-- Price -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price (RM)"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"/>
                <EditText
                    android:id="@+id/etPrice"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="0.00"
                    android:background="@drawable/bg_input"
                    android:padding="12dp"
                    android:inputType="numberDecimal"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>

                <!-- Save Button -->
                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Save"
                    android:backgroundTint="#380C72"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"/>

            </LinearLayout>
        </ScrollView>

        <!-- Bottom Navigation Bar -->
        <include layout="@layout/staff_bottom_navbar" />

    </LinearLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/staff_drawer_layout"
        app:menu="@menu/bottom_nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
