<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- BACK / CLOSE BUTTON -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="start"
            android:src="@drawable/ic_close"
            android:contentDescription="Close Drawer"
            android:padding="4dp"/>

        <!-- PROFILE CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/rounded_gray"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDrawerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lorum Ipsum"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDrawerEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LorumIpsum@gmail.com"
                    android:textColor="#777"
                    android:textSize="13sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_profile" />
        </LinearLayout>

        <!-- QUICK OPTIONS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/rounded_gray"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <!-- Favorite Icon -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/icon_favorite"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_favorite"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/label_favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Favorite"
                    android:textColor="#777777"
                    android:textSize="10sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Notifications Icon -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/icon_notifications"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_notifications"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/label_notifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Notification"
                    android:textColor="#777777"
                    android:textSize="9sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Settings Icon -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/icon_settings"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_settings"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/label_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Settings"
                    android:textColor="#777777"
                    android:textSize="10sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Payment Icon -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/icon_card"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_payment"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/label_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Payment"
                    android:textColor="#777777"
                    android:textSize="9sp"
                    android:gravity="center" />
            </LinearLayout>

        </LinearLayout>


        <!-- MENU ITEMS -->
        <!-- Reservations -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/menuIconReservations"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_yourreservations" />

            <TextView
                android:id="@+id/menuTitleReservations"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reservations"
                android:textColor="#333"
                android:textSize="14sp"
                android:paddingStart="14dp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_arrow_right"/>
        </LinearLayout>

        <!-- About -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/menuIconAbout"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_about" />

            <TextView
                android:id="@+id/menuTitleAbout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="About"
                android:textColor="#333"
                android:textSize="14sp"
                android:paddingStart="14dp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_arrow_right"/>
        </LinearLayout>

        <!-- Send Feedback -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/menuIconFeedback"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_feedback" />

            <TextView
                android:id="@+id/menuTitleFeedback"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Send Feedback"
                android:textColor="#333"
                android:textSize="14sp"
                android:paddingStart="14dp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_arrow_right"/>
        </LinearLayout>

        <!-- Help & FAQs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/menuIconHelp"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_help" />

            <TextView
                android:id="@+id/menuTitleHelp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Help &amp; FAQs"
                android:textColor="#333"
                android:textSize="14sp"
                android:paddingStart="14dp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_arrow_right"/>
        </LinearLayout>

        <!-- Logout -->
        <LinearLayout
            android:id="@+id/Logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/menuIconLogout"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_logout" />

            <TextView
                android:id="@+id/menuTitleLogout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Logout"
                android:textColor="#333"
                android:textSize="14sp"
                android:paddingStart="14dp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_arrow_right"/>
        </LinearLayout>

        <!-- LOGO AT BOTTOM -->
        <ImageView
            android:id="@+id/drawerLogo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="250dp"
            android:contentDescription="Drawer Logo"
            android:src="@drawable/dinevista" />

    </LinearLayout>

</ScrollView>
